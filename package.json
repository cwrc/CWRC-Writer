{
  "name": "cwrcwriter",
  "version": "1.0.0",
  "description": "intuitive document editing with xml and rdf",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cwrc/CWRC-Writer.git"
  },
  "keywords": [
    "xml",
    "rdf",
    "editor",
    "annotation"
  ],
  "author": "Andrew MacDonald",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/jchartrand/CWRC-Writer/issues"
  },
  "homepage": "https://github.com/cwrc/CWRC-Writer#readme",
  "config": {
    "cwrcDialogsDir": "D:/git/CWRC-Dialogs"
  },
  "scripts": {
    "clean": "rimraf build && mkdirp build/js && mkdirp build/lib",
    "build": "npm run clean && npm run build:js && npm run build:images && npm run build:css && npm run build:html",
    
    "browserify": "browserify src/js/writer.js --debug --standalone CWRCWriter > build/js/app.js",
    "browserify:min": "browserify src/js/writer.js --standalone CWRCWriter -p [ minifyify -- p app.js.map --output build/app.js.map ] > build/js/app.js",
    "browserify:delegator": "browserify src/js/delegator.js --debug --standalone Delegator > build/js/delegator.js",
    
    "watch": "watchify src/js/writer.js --debug --standalone CWRCWriter -o build/js/app.js --verbose",
    
    "jquery": "npm run jquery:jstree",
    "jquery:jstree": "copyfiles -f \"node_modules/jstree/dist/themes/default/*\" build/lib/jquery/jstree/themes/default && copyfiles -f src/js/lib/jquery/plugins/jstree/themes/cwrc/cwrc.css build/lib/jquery/jstree/themes/default",
    
    "build:js": "npm run browserify && npm run browserify:delegator && npm run jquery && npm run tinymce:copy && npm run cwrcDialogs && npm run build:extrajs",
    "build:images": "copyfiles -u 1 \"src/img/**/*\" build/",
    "build:css": "copyfiles -u 1 \"src/css/**/*\" build/ && copyfiles -f node_modules/prismjs/themes/prism.css build/css/",
    "build:html": "copyfiles -u 1 \"src/*.htm\" build/",
    "build:extrajs": "copyfiles -u 2 src/js/writerConfig.js build/js/",
    
    "schema": "mkdirp build/schema && copyfiles -u 3 \"src/js/schema/*/xml/*\" build/schema/",
    
    "tinymce": "npm run tinymce:copy",
    "tinymce:copy": "npm run tinymce:copytheme && npm run tinymce:copyskin",
    "tinymce:copytheme": "copyfiles -u 2 \"node_modules/tinymce/themes/modern/**/*\" build/js/",
    "tinymce:copyskin": "copyfiles -u 2 \"node_modules/tinymce/skins/lightgray/**/*\" build/js/",
    
    "cwrcDialogs": "npm run cwrcDialogs:importcss && npm run cwrcDialogs:importjs && npm run bootstrap",
    "cwrcDialogs:importcss": "copyfiles -f %npm_package_config_cwrcDialogsDir%/css/cD.css build/css/cD/css/ && copyfiles -f %npm_package_config_cwrcDialogsDir%/font-awesome/css/font-awesome.css build/css/cD/css/ && copyfiles -f \"%npm_package_config_cwrcDialogsDir%/font-awesome/fonts/*\" build/css/cD/fonts/",
    "cwrcDialogs:importjs": "copyfiles -u 4 \"%npm_package_config_cwrcDialogsDir%/js/**/*\" temp/cwrc/",
    "cwrcDialogs:build": "browserify temp/cwrc/cD.js --debug --standalone cD > build/js/cD.js",
    "bootstrap": "copyfiles -f %npm_package_config_cwrcDialogsDir%/css/bootstrap.css build/css/bootstrap/css/ && copyfiles -f \"node_modules/bootstrap/dist/fonts/*\" build/css/bootstrap/fonts/"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "$",
    "jquery-layout": {"exports": "$.fn.layout", "depends": ["jquery:jQuery"]},
    "jstree": {"exports": "$.fn.vakata", "depends": ["jquery:jQuery"]},
    "jquery-xpath": {"exports": "$.fn.xpath", "depends": ["jquery:jQuery"]},
    "jquery-watermark": {"exports": "$.fn.watermark", "depends": ["jquery:jQuery"]},
  
    "prismjs": {"exports": "Prism"},
    "objtree": {"exports": "ObjTree"},
  
    "bootstrap": {"depends": ["jquery:jQuery"]},
    "bootstrap-datepicker": {"exports": "$.fn.datepicker", "depends": ["jquery:jQuery"]}
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "jquery-xpath": "./node_modules/jquery-xpath/jquery.xpath.js",
    "jstree": "./node_modules/jstree/dist/jstree.js",
    
    "jquery-ui-core": "./src/js/lib/jquery/jquery-ui-core.js",
    "jquery-layout": "./src/js/lib/jquery/plugins/jquery.layout-latest.js",
    "jquery-contextmenu": "./src/js/lib/jquery/plugins/jquery.contextmenu.min.js",
    "jquery-watermark": "./src/js/lib/jquery/plugins/jquery.watermark.min.js",
    "jquery-popup": "./src/js/lib/jquery/plugins/jquery.popup.js",
    
    "objtree": "./src/js/lib/objtree/ObjTree.js",
    
    "cwrc-contextmenu": "./src/js/tinymce_plugins/cwrc_contextmenu.js",
    "cwrc-path": "./src/js/tinymce_plugins/cwrc_path.js",
    "schematags": "./src/js/tinymce_plugins/schematags.js",
    "treepaste": "./src/js/tinymce_plugins/treepaste.js",
    
    "cwrcDialogs": "./temp/cwrc/cD.js",
    "bootstrap": "./node_modules/bootstrap/dist/js/bootstrap.js",
    "bootstrap-datepicker": "./temp/cwrc/lib/bootstrap-datepicker.js"
  },
  "devDependencies": {
    "copyfiles": "^1.0.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    
    "browserify": "^13.0.1",
    "browserify-shim": "^3.2.0",
    "deamdify": "au-phiware/deamdify",
    "grunt": "^1.0.1",
    "watchify": "^3.7.0",
    "minifier": "^0.8.0",
    "minifyify": "^7.3.3",
    
    "tinymce": "^4.5.0",
    "jquery": "^3.1.0",
    "jquery-ui": "1.12",
    "jquery-xpath": "^0.3.1",
    "jquery.tmpl": "0.0.2",
    "jstree": "^3.3.2",
    "moment": "^2.13.0",
    "octokit": "^0.10.4",
    "css-parse": "^2.0.0",
    "css-stringify": "^2.0.0",
    "prismjs": "^1.6.0",
    
    "bootstrap": "^3.2.0",
    "knockout": "^2.3.0"
  }
}
